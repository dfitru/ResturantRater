@model IEnumerable<ResturantRater.Models.Restaurant >

@{
    ViewBag.Title = "Restaurants";
}

<h2>List Of Restaurants</h2>

<p>
    @Html.ActionLink("Rate a Restarant","Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model=>model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model=>model.Adress)
        </th>
        <th>
            @Html.DisplayNameFor(model=>model.Rating)
        </th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem=>item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem=>item.Adress)
            </td>
            <td>
                @Html.DisplayFor(modelItem=>item.Rating)
            </td>
            <td>
                @Html.ActionLink("Change", "Edit", new { id = item.RestaurantId })|
                @Html.ActionLink("More Info", "Details", new { id = item.RestaurantId })|
                @Html.ActionLink("Delete", "Delete", new { id = item.RestaurantId })
            </td>
        </tr>
    }
</table>